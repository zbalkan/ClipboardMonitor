<Window x:Class="ClipboardMonitor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardMonitor"
        mc:Ignorable="d"
        Title="About" Height="160" Width="400" WindowStyle="ToolWindow" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="OKButton" Grid.Column="1" Content="OK" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="124" Click="Button_Click" Margin="0,1,0,0" IsDefault="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="20" TextWrapping="Wrap" Text="ClipboardMonitor tracks your clipboard and checks only PAN. Except for the incident records in the Windows event log, no tracking is conducted on the computer." VerticalAlignment="Top" Grid.ColumnSpan="4" IsHitTestVisible="False" Grid.RowSpan="3" Width="360" Height="90"/>
    </Grid>
</Window>
